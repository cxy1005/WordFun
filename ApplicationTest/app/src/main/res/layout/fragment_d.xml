<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 标题 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DeepSeek 英语助手"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp"/>

        <!-- 四六级成绩预测卡片 -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardScorePrediction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"

                    android:layout_marginEnd="16dp"
                    android:layout_alignParentStart="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="四六级成绩预测"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="基于你的学习数据预测考试分数"

                    android:layout_marginTop="4dp"/>

                <Button
                    android:id="@+id/btnPredictScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="开始预测"

                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="8dp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>
            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 学习报告生成卡片 -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardLearningReport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"

                    android:layout_marginEnd="16dp"
                    android:layout_alignParentStart="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="学习报告生成"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="分析你的学习情况生成详细报告"

                    android:layout_marginTop="4dp"/>

                <Button
                    android:id="@+id/btnGenerateReport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="生成报告"

                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="8dp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>
            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 英文对话卡片 -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardEnglishChat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"

                    android:layout_marginEnd="16dp"
                    android:layout_alignParentStart="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="英文对话练习"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="与AI进行实时英文对话练习"

                    android:layout_marginTop="4dp"/>

                <Button
                    android:id="@+id/btnStartChat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="开始对话"

                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="8dp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>
            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</ScrollView>